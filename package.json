{
    "name": "node-react-ui",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "node": ">= 12.13.0"
    },
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 Edge versions"
    ],
    "pkg": {
        "assets": "target/renderer/*"
    },
    "bin": "target/main/main.js",
    "scripts": {
        "prettier:fix": "prettier --write \"{src,test}/**/*.{ts,tsx,json}\"",
        "prettier:check": "prettier --list-different \"{src,test}/**/*.{ts,tsx,json}\"",
        "clean": "rimraf target/main/**.* target/renderer/**.* target/app/**.*",
        "build:renderer": "parcel build src/renderer/index.html --experimental-scope-hoisting --out-dir target/renderer --no-source-maps",
        "build:main": "parcel build src/main/main.ts --experimental-scope-hoisting --out-dir target/main --target node --no-source-maps",
        "build:executable-pkg": "pkg --target node12.13.1-win-x64 --output target/app/app.exe .",
        "build:copynative-pkg": "copyfiles -f node_modules/sqlite3/lib/binding/node-v72-win32-x64/node_sqlite3.node target/app",
        "build:executable-nexe": "nexe target/main/main.js --target windows-x64-12.13.1 --output target/app/app.exe --resource target/renderer/*",
        "build:copynative-nexe": "copyfiles node_modules/sqlite3/lib/binding/node-v72-win32-x64/node_sqlite3.node target/app",
        "build": "yarn run clean && yarn run build:renderer && yarn run build:main && yarn run build:executable-nexe && yarn run build:copynative-nexe && yarn run fixsubsystem",
        "fixsubsystem": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Professional\\VC\\Tools\\MSVC\\14.11.25503\\bin\\Hostx64\\x64\\editbin.exe\" /subsystem:windows target/app/app.exe",
        "fixicon": "ResourceHacker.exe -open target/app/app.exe -save target/app/app.exe -action addoverwrite -res src/assets/appicon.ico -mask ICONGROUP,1,",
        "compress": "upx target/app/app.exe",
        "start:renderer": "parcel serve src/renderer/index.html --out-dir target/serve --port 8080 --no-autoinstall",
        "start:main": "node -r ts-node/register/transpile-only src/main/main.ts"
    },
    "dependencies": {
        "puppeteer-core": "2.1.1",
        "react": "16.13.0",
        "react-dom": "16.13.0",
        "react-router-dom": "5.1.2",
        "sqlite3": "4.1.1",
        "winstrap": "0.5.12"
    },
    "devDependencies": {
        "@types/node": "13.7.6",
        "@types/prettier": "1.19.0",
        "@types/puppeteer-core": "2.0.0",
        "@types/react": "16.9.23",
        "@types/react-dom": "16.9.5",
        "@types/react-router-dom": "5.1.3",
        "@types/sqlite3": "3.1.6",
        "copyfiles": "2.2.0",
        "nexe": "3.3.2",
        "parcel": "1.12.4",
        "pkg": "4.4.3",
        "prettier": "1.19.1",
        "rimraf": "3.0.2",
        "ts-node": "8.6.2",
        "typescript": "3.8.2"
    }
}
